{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "allowJs": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "outDir": "build",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "lib": [
      "es2018",
      "esnext"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "types/**/*.ts"
  ]
}
